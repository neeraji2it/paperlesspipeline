<div class="dashboard-content">
  <h2>Admin</h2>
  <hr></hr>
  <div style="background-color:#d4d4d4;margin-left:20px;float:left;">
    <b>Gloable Settings</b>
  </div><br /><br />
 
  <%= form_for @user, :url => user_path(current_user), :method => 'PUT' do |f| %>
    
      <table>
        <tr>
          <td><%= f.label "Name:" %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.check_box :allow_pdf, :checked => true %>
         </td>
         <td>Only allow PDF documents</td>
        </tr>
        <tr>
          <td><%= f.check_box :email_transaction_reminders, :checked => false %>
         </td>
         <td>Email agents expiring and closing transaction reminders</td>
        </tr>
        <tr>
          <td><%= f.check_box :entered_docs_feature %>
         </td>
         <td>Enable Entered Docs feature</td>
        </tr>
        <tr>
          <td><%= f.check_box :duplicate_document_uploads, :checked => true %>
         </td>
         <td>Prevent duplicate document uploads</td>
        </tr>
        
    </table>
    <br />
    
    <div style="background-color:#d4d4d4;margin-left:20px;float:left;">
      <b>Apperance</b>
    </div><br /><br /><br /><br />
    
    <%= f.submit "Update", :class => "btn" %>
    <%= link_to "Cancel" %>
    
  <% end %>
   
</div>
