<h2><b>Manage Users</b></h2>
<hr></hr>
<br /><br />
<%= link_to "Add user", add_user_users_path, :class => "btn btn-success" %>


<br /><br /><br />
<table border=2px, id="content" style="min-height:25px; height:25px; width:100%;">
  <tr style="background-color:#F2F2F2;height:50px;">
    <th>User</th>
    <th>Email</th>
    <th>Role</th>
    <th>Location</th>
    <th>Active</th>
    <th>Actions</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td align="center"><%= user.name%></td>
      <td align="center"> <%= link_to user.email %> </td>
      <td align="center"> <%= "admin" %> </td>
      <td align="center"> </td>
      <td align="center"> <%= user.active %> </td>
      <td align="center"> <%= link_to "Action",activate_user_path(user, :active => user.active),:method => 'PUT', :class => "btn" %> </td>
    </tr>
  <% end %>
</table>

<br /><br /><br />
