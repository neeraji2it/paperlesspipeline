<div class="contentbox">
  <h2>Add New User</h2>
  <div style="background-color:white;padding-left:30px;">
    <table>
      <%= form_for(@user, :url => user_create_users_path(@user),:html => {:id => "commentForm", :method => "POST"}) do |f| %>
        <tr>
          <td><%= f.hidden_field :create_id, :value => current_user.id %></td>
        </tr>
        <tr><td>&nbsp</td></tr>
        <tr>
          <td><%= f.label :first_name,"First Name" %></td>
          <td><%= f.text_field :first_name, :autofocus => true %></td>
          <td><%= validation_error(@user.errors["first_name"]) %></td>
        </tr>
        <tr><td>&nbsp</td></tr>
        <tr>
          <td><%= f.label :last_name %></td>
          <td><%= f.text_field :last_name, :autofocus => true %></td>
          <td><%= validation_error(@user.errors["last_name"]) %></td>
        </tr>
        <tr><td>&nbsp</td></tr>
        <tr>
          <td><%= f.label :email %></td>
          <td><%= f.email_field :email, :autofocus => true %></td>
          <td><%= validation_error(@user.errors["email"]) %></td>
        </tr>
        <tr><td>&nbsp</td></tr>
        <tr>
          <td><%= f.label :Location %></td>
          <td><%= f.select :location, options_for_select(Location.all.collect{|l| [l.name, l.id]}), :class => "micro-input" %></td>
          <td><%= validation_error(@user.errors["location_id"]) %></td>
        </tr>
        <tr><td>&nbsp</td></tr>
        <tr>
          <td><%= f.label :Role %></td>
          <td><%= f.select :role, %w(Admin Agent User), :title => "Add a Role" %></td>
          <td><%= validation_error(@user.errors["role"]) %></td>
        </tr>


        <tr><td>&nbsp</td></tr>
        <tr>
          <td><%= f.label :password %></td>
          <td><%= f.password_field :password %></td>
          <td><%= validation_error(@user.errors["password"]) %></td>
        </tr>
        <tr><td>&nbsp</td></tr>
        <tr>
          <td> <%= f.label :password_confirmation %></td>
          <td><%= f.password_field :password_confirmation %></td>
          <td><%= validation_error(@user.errors["password_confirmation"]) %></td>
        </tr>
        <tr><td>&nbsp</td></tr>

        <tr><td>&nbsp</td></tr>
        <tr><td>&nbsp</td></tr>
        <tr><td>&nbsp</td></tr>
        <tr>
          <td><%= f.submit "Sign up" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<div class="clearFix"></div>
