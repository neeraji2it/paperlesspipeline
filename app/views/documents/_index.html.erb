
<p>Only active Documents are shown below. <a class="link-viewall" title="View all &rarr;" href="#">View all &rarr;</a></p>
<div class="contentbox">
  <h1>
    <div class="column w5">Info</div>
    <div class="column w30">Contract Forms</div>
    <div class="column w12">Comments</div>
    <div class="column w20">Added By</div>
    <div class="column w20">Added On</div>
    <div class="column last">Actions</div>
  </h1>

  <div class="box">
    <% @documents.each do |i| %>
      <div class="tableTransaction">
        <div class="transactionrow">
          <div class="column w5"><div class="icon-pdf"></div></div>
          <div class="column w30"><% if i.document_file_name.present? %><%= i.document_file_name[0..24] %><% else %><%= i.id %><% end %> </div>
          <div class="column w12"><div class="icon-comment"></div></div>
          <div class="column w20"><%= current_user.email %> </div>
          <div class="column w20"><%= current_user.created_at %></div>
          <div class="column last">
            <span class="btn-action admin">
              <em class="tooltip-container"><span>Action</span>
                <strong class="tooltip">
                  <ul class="list-tooltip">
                    <li class="icon-download"><a title="Download" href="#">Download</a></li>
                    <li class="icon-edit"><a title="Edit Doc" href="#">Edit Doc</a></li>
                    <li class="icon-delete"><a title="Delete" href="#">Delete</a></li>
                  </ul>
                  <i class="top-arrow"></i>
                </strong>
              </em>
            </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>

