<!DOCTYPE html>
<html>
  <head>
    <title>Paperlesspipeline</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <style>
      body { background-color: #566477; height: 90%; padding-top: 20px; }
    </style>
  </head>

  <body>
    <div style='height:0px;'>
      <a style="color: white;left: 40px;position: relative;top: -15px;">PaperLessPipeLine</a>
      <ul class="nav pull-right">
        <% if !current_user%>
          <li><%= link_to "Signup", new_user_registration_path, :id => "user_register" %></li>
          <li><%= link_to "Login", new_user_session_path, :id => "user_register" %></li>
        <% else%>
          <li><%= link_to "Logout", destroy_user_session_path,:method => 'DELETE', :id => "user_register" %></li>
        <%end%>
      </ul>
    </div>



    <div class="container" style="margin-top:45px;height:590px;width:100%; position: relative;clear:both;background: none repeat scroll 0 0 #d4d4d4;">
      <% if current_user%>
        <div style="color: black;left: 295px;position: relative;top: -16px;width: 35%;">
          <%= link_to "Dashboard", root_path, :id => "links"%>
          <%= link_to "Transactions", "", :id => "links" %>
          <%= link_to "Tasks", "", :id => "links" %>
          <%= link_to "Working", "", :id => "links" %>
          <%= link_to "Unreviewed", "", :id => "links" %>
          <%= link_to "Office", "", :id => "links" %>
          <%= link_to "+Transaction", "", :id => "links" %>
        </div>
      <% end %>
      <div id="small-container">
        <%= yield %>
      </div>
    </div>  

  <footer class="footer" style="background-color:#c5c5c5; clear:both;">
    <div class="row" style="background-color:#c5c5c5">
      <div style='float:right;'>
        <b> (c)2013 All Rights Reserved.</b>
      </div>
    </div>
  </footer>
</body>
</html>


